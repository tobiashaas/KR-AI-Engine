# KRAI Engine Environment Configuration
# ====================================
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=krai_engine
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSLMODE=prefer

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# File Processing Settings
MAX_FILE_SIZE_MB=100
MAX_BATCH_SIZE=10

# Future Filament Dashboard Integration
FILAMENT_URL=http://localhost:8080
DASHBOARD_API_KEY=your_dashboard_api_key_here

# Computer Vision Models
VISION_MODEL_PATH=./models
CUSTOM_MODEL_WEIGHTS=./models/weights/print_defects.pt

# OCR Configuration  
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGES=eng,deu,fra,spa

# Processing Options
ENABLE_GPU_ACCELERATION=false
BATCH_PROCESSING_WORKERS=4
AUTO_CATEGORIZATION_THRESHOLD=0.8

# Security (for future API)
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring & Logging
ENABLE_DETAILED_LOGGING=true
LOG_RETENTION_DAYS=30
SAVE_PROCESSING_STATS=true